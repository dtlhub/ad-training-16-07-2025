<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <%- include('../partial/header', {title: name}); -%>
</head>
<body>
    <%- include('../partial/nav'); -%>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partial/sidebar'); -%>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Create <%= name %></h1>
                </div>

                <form action="/company/<%= name %>s/<%= id %>" method="POST" class="crud-form">
                    <% Object.entries(schema).forEach(([fieldName, field]) => { %> 
                        <div class="mb-3">
                            <%- include(getFieldTemplate('../partial', field), { 
                                name: fieldName, 
                                value: entity?.[fieldName], 
                                field
                            }); -%>                            
                        </div>
                    <% }); %>
                    <button type="submit" class="btn btn-primary"><%= !entity ? 'Create' : 'Update' %></button>
                </form>
            </main>
        </div>
    </div>
</body>
</html>